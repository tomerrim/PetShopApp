@model IEnumerable<Animal>

    @*Admin*@
<div class="container p-3 ">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Animal List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Animal
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Image</th>
            <th>Description</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mod in Model)
        {
            <tr class="hidden">
                <td width="5%">
                    @mod.AnimalId
                </td>
                <td width="10%">
                    @mod.Name
                </td>
                <td width="5%">
                    @mod.Age
                </td>
                <td width="15%">
                    <img src="@mod.PictureName">
                </td>
                <td width="30%">
                    @mod.Description
                </td>
                <td width="5%">
                    @mod.CategoryId
                </td>
                <td width="15%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Admin" asp-action="Upsert" asp-route-id="@mod.AnimalId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>

                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@mod.AnimalId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
