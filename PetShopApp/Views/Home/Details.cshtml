@model Animal
<div class="text-center align-content-center justify-content-center">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8"><h1>@Model.Name</h1></div>
        <div class="col-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back To Home</a>
        </div>
    </div>
    <div class="card mx-auto hidden w-50">
        <img src="@Model.PictureName" class="card-img-top img-fluid h-50"> 
        <div class="card-body">
            <p class="card-text ">@Model.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">ID - @Model.AnimalId</li>
            <li class="list-group-item">Age - @Model.Age</li>
            <li class="list-group-item">Category - @Model.CategoryId</li>
        </ul>
    </div>
    <div class="mt-5 hidden">          
        <h2>Comments</h2>    
        <div class="row">
             <div class="col-sm-10 col-12">
                <ul class="list-group overflow-auto" style="height:300px;">
                    @foreach (var com in Model.Comments)
                    {
                        <li class="list-group-item">
                            <h5>@Html.Raw(com.CommentText)</h5>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-2 col-12 align-items-center">
                <form asp-action="AddComment" asp-controller="Home" method="post">
                   <div class=" p-3 mt-4">
                       <input name="CommentId" type="hidden" value="0"/>
                       <input name="AnimalId" type="hidden" value="@Model.AnimalId"/>
                       <div class="mb-3" >
                            <label for="CommentText">Write Comment:</label>
                           <input name="CommentText" type="text" min="3"  required/>
                       </div>
                       <button type="submit" class="btn btn-primary" style="width:75%">
                           <i class="bi bi-plus-circle"></i> &nbsp; Add New Comment
                       </button>
                   </div>
                </form>  
            </div>
        </div>                   
    </div>  
</div>



